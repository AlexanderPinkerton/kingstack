{
  "name": "@kingstack/advanced-optimistic-store",
  "version": "0.1.0",
  "description": "Framework-agnostic optimistic updates with MobX + TanStack Query Core + optional realtime",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./realtime": {
      "types": "./dist/realtime/index.d.ts",
      "import": "./dist/realtime/index.js",
      "require": "./dist/realtime/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "@tanstack/query-core": "^5.0.0",
    "mobx": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "socket.io-client": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@kingstack/eslint-config": "workspace:*",
    "@kingstack/ts-config": "workspace:*",
    "@tanstack/query-core": "^5.59.20",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.25.0",
    "mobx": "^6.13.5",
    "prettier": "^3.4.2",
    "socket.io-client": "^4.8.1",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
