{
  "private": true,
  "name": "kingstack",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "start": "turbo run start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "local": "yarn env:local && yarn supabase:start",
    "docker:build-nest": "docker build -f apps/nest/Dockerfile -t kingstack-nest .",
    "docker:run-nest": "docker run --rm -p 3000:3000 --name kingstack-nest --env-file apps/nest/.env -d kingstack-nest",
    "docker:compose": "docker-compose up --build",
    "docker:compose:down": "docker-compose down",
    "prisma:generate": "yarn workspace @kingstack/prisma prisma generate",
    "prisma:migrate": "yarn workspace @kingstack/prisma prisma migrate dev",
    "env:local": "bun scripts/generate-env.ts local",
    "env:development": "bun scripts/generate-env.ts development",
    "env:production": "bun scripts/generate-env.ts production",
    "env:playground": "bun scripts/generate-env.ts playground",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "bun scripts/supabase-status.ts",
    "supabase:list": "bun scripts/supabase-list-instances.ts",
    "supabase:check": "bun scripts/supabase-check-config.ts",
    "supabase:reset": "supabase db reset",
    "shadow:start": "supabase start -x realtime,storage-api,imgproxy,kong,mailpit,postgrest,postgres-meta,studio,edge-runtime,logflare,vector,supavisor",
    "shadow:stop": "supabase stop",
    "vercel": "cd apps/next && vercel",
    "vercel:prod": "cd apps/next && vercel --prod",
    "deploy:check-tools": "gh --version && npx vercel --version && gh auth status && npx vercel whoami",
    "deploy:sync-secrets": "bun config/scripts/sync-deployment-secrets.ts",
    "deploy:sync-secrets:dev": "bun config/scripts/sync-deployment-secrets.ts --env development",
    "deploy:sync-secrets:prod": "bun config/scripts/sync-deployment-secrets.ts --env production",
    "deploy:sync-secrets:dry-run": "bun config/scripts/sync-deployment-secrets.ts --dry-run"
  },
  "packageManager": "yarn@4.10.2",
  "dependencies": {
    "@types/pg": "^8.15.4",
    "pg": "^8.16.3",
    "turbo": "^2.6.1"
  },
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/node": "^24.10.1",
    "supabase": "2.58.5",
    "vercel": "^44.4.0"
  }
}