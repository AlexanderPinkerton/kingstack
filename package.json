{
  "private": true,
  "name": "kingstack",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "start": "turbo run start",
    "build": "turbo run build",
    "build:release-packages": "turbo run build $(bun scripts/get-public-packages.ts)",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "local": "yarn env:local && yarn supabase:start",
    "docker:build-nest": "docker build -f apps/nest/Dockerfile -t kingstack-nest .",
    "docker:run-nest": "docker run --rm -p 3000:3000 --name kingstack-nest --env-file apps/nest/.env -d kingstack-nest",
    "docker:compose": "docker-compose up --build",
    "docker:compose:down": "docker-compose down",
    "prisma:generate": "yarn workspace @kingstack/prisma prisma generate",
    "prisma:migrate": "yarn workspace @kingstack/prisma prisma migrate dev",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "bun scripts/supabase-status.ts",
    "supabase:list": "bun scripts/supabase-list-instances.ts",
    "supabase:check": "bun scripts/supabase-check-config.ts",
    "supabase:reset": "supabase db reset",
    "vercel": "cd apps/next && vercel",
    "vercel:prod": "cd apps/next && vercel --prod",
    "env:local": "bun king-config generate local",
    "env:development": "bun king-config generate development",
    "env:production": "bun king-config generate production",
    "env:playground": "bun king-config generate playground",
    "deploy:check-tools": "gh --version && npx vercel --version && gh auth status && npx vercel whoami",
    "deploy:sync-secrets": "bun king-config sync",
    "deploy:sync-secrets:dev": "bun king-config sync --env development",
    "deploy:sync-secrets:prod": "bun king-config sync --env production",
    "deploy:sync-secrets:dry-run": "bun king-config sync --dry-run"
  },
  "packageManager": "yarn@4.10.2",
  "dependencies": {
    "@types/pg": "^8.15.4",
    "pg": "^8.16.3",
    "turbo": "^2.6.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@iarna/toml": "^2.2.5",
    "@kingstack/config": "workspace:*",
    "@types/node": "^24.10.1",
    "supabase": "2.58.5",
    "vercel": "^49.1.0"
  }
}