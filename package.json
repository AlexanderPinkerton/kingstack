{
  "private": true,
  "name": "kingstack",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "start": "turbo run start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "docker:build-backend": "docker build -f apps/backend/Dockerfile -t kingstack-backend .",
    "docker:run-backend": "docker run --rm -p 3000:3000 --name kingstack-backend --env-file apps/backend/.env -d kingstack-backend",
    "docker:compose": "docker-compose up --build",
    "docker:compose:down": "docker-compose down",
    "prisma:generate": "yarn workspace @kingstack/prisma prisma generate",
    "prisma:migrate": "yarn workspace @kingstack/prisma prisma migrate dev",
    "env:development": "bun scripts/swap-env.ts development",
    "env:production": "bun scripts/swap-env.ts production",
    "env:current": "bun scripts/swap-env.ts --current",
    "shadow:start": "supabase start -x realtime,storage-api,imgproxy,kong,mailpit,postgrest,postgres-meta,studio,edge-runtime,logflare,vector,supavisor",
    "shadow:stop": "supabase stop"
  },
  "packageManager": "yarn@4.10.2",
  "dependencies": {
    "@types/pg": "^8.15.4",
    "pg": "^8.16.3",
    "turbo": "^2.5.2"
  },
  "devDependencies": {
    "supabase": "2.40.7",
    "vercel": "^44.4.0"
  }
}
